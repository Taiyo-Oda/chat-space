.side
  .side__header
    .user__items
      .user__items--name
        = current_user.name
      .user__items--icon
        = link_to new_group_path, class: "contents__link" do
          = icon('far', 'edit', class: "contents__icon")
        = link_to edit_user_path(current_user), class: "contents__link" do
          = icon('fa', 'cog', class: "contents__icon")
  .side__main
    - current_user.groups.each do |group|
      .group__info
        = link_to group_messages_path(group), class: "group__link" do
          .group__info--name
            = group.name
          .group__info--message
            = group.show_last_message
              
          
      